if [ -z $1 ]
then
    DATE=$(date +%Y-%m-%d)
else
    DATE=$1
fi

if [ -z $2 ]
then
    FILES='*.org'
else
    FILES=$2
fi

cd ~/org

for FILE in $(ls $FILES)
do
    HHMM=$(egrep "CLOCK: \[$DATE(.*)=>  " $FILE | awk -F\=\> 'function minutos(t) {split(t,Arr,":");return Arr[1]*60+Arr[2]} {total+=minutos($2)} END {printf "%02d:%02d %-4d",total/(60),total%60,total}')
    echo -n $HHMM$'\t'$FILE$'\n'
done | sort -r | grep -v "00:00 0"

if [ "$FILES" == "*.org" ]
then
    HHMM=$(cat $(ls *.org) | egrep "CLOCK: \[$DATE(.*)=>  " | awk -F\=\> 'function minutos(t) {split(t,Arr,":");return Arr[1]*60+Arr[2]} {total+=minutos($2)} END {printf "%02d:%02d",total/(60),total%60}' | tr -d " ")
    echo -n $HHMM$'\ttotal\n'
fi

